<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#0052A5</item>
    <item name="colorPrimaryDark">#0052A5</item>
    <item name="colorAccent">#E0162B</item>
    <item name="android:statusBarColor">#0052A5</item>
    <item name="android:navigationBarColor">#0052A5</item>
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="MainTheme.Splash" parent="Theme.AppCompat.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimary">#1A6CBF</item>
    <item name="colorPrimaryDark">#0052A5</item>
    <item name="colorAccent">#E0162B</item>
    <item name="android:statusBarColor">#0052A5</item>
    <item name="android:navigationBarColor">#0052A5</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#D0A650</item>
  </style>
</resources>
